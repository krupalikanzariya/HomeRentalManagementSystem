 @model IEnumerable<HomeRentalFrontEnd.Models.ReviewsModel>

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

 <div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active"><a asp-controller="Reviews" asp-action="ReviewsList">Reviews</a></li>
            </ol>
        </div>
    </div>

    <a class="btn btn-primary" asp-controller="Reviews" asp-action="ReviewsAddEdit">
        <i class="bi bi-plus-lg"></i>&nbsp;Add Review
    </a>
    <div class="mb-3">
        <input type="text" class="form-control" id="userSearch" placeholder="Search Properties">
    </div>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Reviews</h4>
                <div class="table-responsive">
                    <table class="table table-bordered verticle-middle">
                        <thead>
                            <tr>
                                <th scope="col">Property Name</th>
                                <th scope="col">Rating</th>
                                <th scope="col">Comment</th>
                                <th scope="col">User Name</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model)
                            {
                                <tr>
                                    <td>@review.Title</td>
                                    <td>@review.Rating</td>
                                    <td>@review.Comment</td>
                                    <td>@review.UserName</td>
                                    <td>
                                        <span>
                                            <a asp-controller="Reviews" asp-action="ReviewsAddEdit" asp-route-ReviewID="@review.ReviewID" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <button class="btn">
                                                    <i class="fa fa-pencil color-muted m-r-5"></i>
                                                </button>
                                            </a>
                                            <form method="post" asp-controller="Reviews" asp-action="ReviewsDelete" onsubmit="return confirm('Are you sure you want to delete this review?');" style="display:inline;">
                                                <input type="hidden" name="ReviewID" value="@review.ReviewID" />
                                                <button type="submit" class="btn" data-toggle="tooltip" data-placement="top" title="Close">
                                                    <i class="fa fa-close color-danger m-r-5"></i>
                                                </button>
                                            </form>
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 

