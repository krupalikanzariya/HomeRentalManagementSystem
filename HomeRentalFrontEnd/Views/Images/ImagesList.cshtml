@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
 @model IEnumerable<HomeRentalFrontEnd.Models.ImagesModel>

 <div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active"><a asp-controller="Images" asp-action="ImagesList">Images</a></li>
            </ol>
        </div>
    </div>

    <a class="btn btn-primary" asp-controller="Images" asp-action="ImagesAddEdit">
        <i class="bi bi-plus-lg"></i>&nbsp;Add Image
    </a>
    <div class="mb-3">
        <input type="text" class="form-control" id="userSearch" placeholder="Search Users">
    </div>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Images</h4>
                <div class="table-responsive">
                    <table class="table table-bordered verticle-middle">
                        <thead>
                            <tr>
                                <th scope="col">Property Name</th>
                                <th scope="col">Image URL</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var image in Model)
                            {
                                <tr>
                                    @* <td>
                                        <div class="media pt-5">
                                            <img class="mr-3 rounded-circle" src=@Url.Content(image.ProfilePictureURL) style="height:50px;width:50px">
                                        </div>
                                    </td> *@
                                    <td>@image.Title</td>
                                    <td>@image.ImageURL</td>
                                    <td>
                                        <span>
                                            <a asp-controller="Images" asp-action="ImagesAddEdit" asp-route-ImageID="@image.ImageID" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <button class="btn">
                                                    <i class="fa fa-pencil color-muted m-r-5"></i>
                                                </button>
                                            </a>
                                            <form method="post" asp-controller="Images" asp-action="ImagesDelete" onsubmit="return confirm('Are you sure you want to delete this image?');" style="display:inline;">
                                                <input type="hidden" name="ImageID" value="@image.ImageID" />
                                                <button type="submit" class="btn" data-toggle="tooltip" data-placement="top" title="Close">
                                                    <i class="fa fa-close color-danger m-r-5"></i>
                                                </button>
                                            </form>
                                            
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 

