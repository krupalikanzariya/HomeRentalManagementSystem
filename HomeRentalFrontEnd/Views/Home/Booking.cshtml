<div class="booking-wrapper">
    <div class="booking-hero">
        <div class="overlay"></div>
        <div class="container position-relative">
            <h1 class="text-white text-center mb-0">Book Your Perfect Getaway</h1>
        </div>
    </div>

    <div class="container booking-container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="booking-card">
                    <div class="progress-indicator mb-4">
                        <div class="step active">
                            <i class="bi bi-person-circle booking-icon" style="color: #FF385C; background-color: gainsboro; border-color: #FF385C;"></i>
                            <span>Personal Info</span>
                        </div>
                        <div class="step">
                            <i class="bi bi-calendar-event booking-icon"></i>
                            <span>Booking Details</span>
                        </div>
                        <div class="step">
                            <i class="bi bi-check-circle booking-icon"></i>
                            <span>Confirmation</span>
                        </div>
                    </div>

                    <form id="bookingForm" class="needs-validation" novalidate>
                        <!-- Personal Information -->
                        <div class="form-section active" id="personalInfo">
                            <h3 class="section-title">
                                <i class="bi bi-person-circle booking-icon"></i>
                                Personal Information
                            </h3>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="fullName" class="form-label">Full Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <input type="text" class="form-control" id="fullName" required>
                                    </div>
                                    <div class="invalid-feedback">Please enter your full name</div>
                                </div>

                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email Address</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                        <input type="email" class="form-control" id="email" required>
                                    </div>
                                    <div class="invalid-feedback">Please enter a valid email address</div>
                                </div>

                                <div class="col-md-6">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                        <input type="tel" class="form-control" id="phone" required>
                                    </div>
                                    <div class="invalid-feedback">Please enter your phone number</div>
                                </div>
                            </div>
                        </div>

                        <!-- Booking Details -->
                        <div class="form-section" id="bookingDetails">
                            <h3 class="section-title">
                                <i class="bi bi-calendar-event booking-icon"></i>
                                Booking Details
                            </h3>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="roomType" class="form-label">Room Type</label>
                                    <select class="form-select custom-select" id="roomType" required>
                                        <option value="">Select room type</option>
                                        <option value="standard">Standard Room</option>
                                        <option value="deluxe">Deluxe Suite</option>
                                        <option value="premium">Premium Suite</option>
                                        <option value="villa">Beach Villa</option>
                                    </select>
                                    <div class="invalid-feedback">Please select a room type</div>
                                </div>

                                <div class="col-md-6">
                                    <label for="checkIn" class="form-label">Check-in Date</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                        <input type="date" class="form-control" id="checkIn" required>
                                    </div>
                                    <div class="invalid-feedback">Please select a check-in date</div>
                                </div>

                                <div class="col-md-6">
                                    <label for="checkOut" class="form-label">Check-out Date</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                        <input type="date" class="form-control" id="checkOut" required>
                                    </div>
                                    <div class="invalid-feedback">Please select a check-out date</div>
                                </div>

                                <div class="col-md-6">
                                    <label for="guests" class="form-label">Number of Guests</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-people"></i></span>
                                        <input type="number" class="form-control" id="guests" min="1" max="10" required>
                                    </div>
                                    <div class="invalid-feedback">Please enter number of guests (1-10)</div>
                                </div>
                            </div>

                            <div class="mt-4">
                                <label for="requests" class="form-label">Special Requests (Optional)</label>
                                <textarea class="form-control" id="requests" rows="3" placeholder="Any special requests or requirements?"></textarea>
                            </div>
                        </div>

                        <div class="form-navigation mt-4">
                            <button type="button" class="btn btn-secondary" id="prevBtn" style="display: none;">Previous</button>
                            <button type="button" class="btn btn-primary" id="nextBtn">Next</button>
                            <button type="submit" class="btn btn-success" id="submitBtn" style="display: none;">Confirm Booking</button>
                        </div>
                    </form>

                    <!-- Success Message -->
                    <div id="bookingSuccess" class="text-center py-5" style="display: none;">
                        <div class="success-animation">
                            <i class="bi bi-check-circle-fill booking-icon"></i>
                        </div>
                        <h3 class="mt-4">Booking Confirmed!</h3>
                        <p class="text-muted">Thank you for your booking. We've sent a confirmation email with all the details.</p>
                        <a href="index.html" class="btn btn-outline-primary mt-3">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>