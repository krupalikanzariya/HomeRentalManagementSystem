 @model IEnumerable<HomeRentalFrontEnd.Models.BookingsModel>

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active"><a asp-controller="Bookings" asp-action="BookingsList">Bookings</a></li>
            </ol>
        </div>
    </div>

    <a class="btn btn-primary" asp-controller="Bookings" asp-action="BookingsAddEdit">
        <i class="bi bi-plus-lg"></i>&nbsp;Add Booking
    </a>
    <div class="mb-3">
        <input type="text" class="form-control" id="userSearch" placeholder="Search Properties">
    </div>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bookings</h4>
                <div class="table-responsive">
                    <table class="table table-bordered verticle-middle">
                        <thead>
                            <tr>
                                <th scope="col">User Name</th>
                                <th scope="col">Property Name</th>
                                <th scope="col">Check In Date</th>
                                <th scope="col">Check Out Date</th>
                                <th scope="col">Guests</th>
                                <th scope="col">Total Price</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td>@booking.UserName</td>
                                    <td>@booking.Title</td>
                                    <td>@booking.CheckInDate</td>
                                    <td>@booking.CheckOutDate</td>
                                    <td>@booking.Guests</td>
                                    <td>@booking.TotalPrice</td>
                                    <td>
                                        <span>
                                            <a asp-controller="Bookings" asp-action="BookingsAddEdit" asp-route-BookingID="@booking.BookingID" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <button class="btn">
                                                    <i class="fa fa-pencil color-muted m-r-5"></i>
                                                </button>
                                            </a>
                                            <form method="post" asp-controller="Bookings" asp-action="BookingsDelete" onsubmit="return confirm('Are you sure you want to delete this booking?');" style="display:inline;">
                                                <input type="hidden" name="BookingID" value="@booking.BookingID" />
                                                <button type="submit" class="btn" data-toggle="tooltip" data-placement="top" title="Close">
                                                    <i class="fa fa-close color-danger m-r-5"></i>
                                                </button>
                                            </form>
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

