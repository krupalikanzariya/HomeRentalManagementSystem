@model IEnumerable<HomeRentalFrontEnd.Models.AmenitiesModel>
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active"><a asp-controller="Amenities" asp-action="AmenitiesList">Amenities</a></li>
            </ol>
        </div>
    </div>

    <a class="btn btn-primary" asp-controller="Amenities" asp-action="AmenitiesAddEdit">
        <i class="bi bi-plus-lg"></i>&nbsp;Add Amenity
    </a>
    <div class="mb-3">
        <input type="text" class="form-control" id="userSearch" placeholder="Search Properties">
    </div>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Reviews</h4>
                <div class="table-responsive">
                    <table class="table table-bordered verticle-middle">
                        <thead>
                            <tr>
                                <th scope="col">Amenity ID</th>
                                <th scope="col">Amenity Name</th>
                                <th scope="col">Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var amenity in Model)
                            {
                                <tr>
                                    <td>@amenity.AmenityID</td>
                                    <td>@amenity.Name</td>
                                    <td>
                                        <span>
                                            <a asp-controller="Amenities" asp-action="AmenitiesAddEdit" asp-route-AmenityID="@amenity.AmenityID" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <button class="btn">
                                                    <i class="fa fa-pencil color-muted m-r-5"></i>
                                                </button>
                                            </a>
                                            <form method="post" asp-controller="Amenities" asp-action="AmenitiesDelete" onsubmit="return confirm('Are you sure you want to delete this amenity?');" style="display:inline;">
                                                <input type="hidden" name="AmenityID" value="@amenity.AmenityID" />
                                                <button type="submit" class="btn" data-toggle="tooltip" data-placement="top" title="Close">
                                                    <i class="fa fa-close color-danger m-r-5"></i>
                                                </button>
                                            </form>
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 