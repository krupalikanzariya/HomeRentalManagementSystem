@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
 @model UsersModel
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active"><a asp-controller="Users" asp-action="UsersAddEdit">User Add/Edit</a></li>
            </ol>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide"  asp-action="Save">
                                <input type="hidden" asp-for="UserID" />

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="FirstName">
                                        First Name <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-username" name="FirstName" placeholder="Enter a first name..">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="LastName">
                                        Last Name <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-username" name="LastName" placeholder="Enter a last name..">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="UserName">
                                        User Name <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-username" name="UserName" placeholder="Enter a user name..">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="Email">
                                        Email <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-email" name="Email" placeholder="Your valid email..">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="Password">
                                        Password <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="password" class="form-control" id="val-password" name="Password" placeholder="Choose a safe one..">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="ProfilePictureURL">
                                        Profile Picture URL <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-password" name="ProfilePictureURL" placeholder="Enter profile picture URL..">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="RoleID">
                                        Role <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <label class="radio-inline mr-3">
                                            <input type="radio" asp-for="RoleID" value="1"> Admin
                                        </label>
                                        <label class="radio-inline mr-3">
                                            <input type="radio" asp-for="RoleID" value="2" checked> User
                                        </label>

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                        <a asp-controller="Users" asp-action="UsersList" class="btn btn-secondary">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>