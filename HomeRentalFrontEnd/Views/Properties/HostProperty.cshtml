@model HomeRentalFrontEnd.Models.PropertiesModel

@section Styles {
    <style>
        /* Input field layout */
        .image-url-container {
            width: 100%;
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
        }

            .image-url-container input {
                width: calc(100% - 48px);
                height: 38px;
                border: 1px solid #ced4da;
                border-radius: 4px;
                padding: 0.375rem 0.75rem;
            }

        /* Button container - fixed */
        .form-buttons-wrapper {
            display: flex;
            justify-content: center;
            align-items: baseline;
            gap: 20px;
            margin-top: 2rem;
        }

        .btn {
            width: 150px;
            height: 44px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 600;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            text-decoration: none;
        }

        /* Save button */
        .btn-save {
            /* background-color: #dfa974; */
            background: transparent;
            color: #dfa974;
            border: 1px solid #dfa974;
        }

            .btn-save:hover {
                background: #dfa974;
                color: #ffffff;
                transition: all 0.3s ease;
            }

        /* Cancel button */
        .btn-cancel {
            background: transparent;
            color: #dfa974;
            border: 1px solid #dfa974;
        }

            .btn-cancel:hover {
                background: #dfa974;
                color: #ffffff;
                transition: all 0.3s ease;
            }

        .form-control {
            width: 100% !important;
        }

        .bottom-container {
            display: flex;
            margin-top: 20px;
        }

        .image-urls-group {
            width: 100%;
        }

        select.form-control {
            width: 100% !important;
        }

            select.form-control option {
                width: 100% !important;
                min-width: 100% !important;
                box-sizing: border-box !important;
                padding: 8px !important;
            }

        .form-control option {
            width: 100% !important;
            min-width: 100%;
            box-sizing: border-box;
        }

        select {
            width: 100% !important;
            -webkit-appearance: listbox !important; /* For Safari/Chrome */
            -moz-appearance: listbox !important; /* For Firefox */
            appearance: listbox !important; /* Standard */
        }

        .form-group select.form-control {
            appearance: auto; /* Ensures native dropdown arrow appears properly */
        }

        .dropdown-menu {
            width: 100% !important;
            min-width: 100% !important;
            box-sizing: border-box;
        }

        .add-btn,
        .remove-btn {
            width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #ced4da;
            background-color: white;
            color: #dfa974;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 10px;
            font-size: 18px;
            font-weight: bold;
        }

        .custom-dropdown-container {
            position: relative;
            width: 100%;
        }

        .custom-dropdown {
            width: 100%;
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 0.375rem 0.75rem;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 38px;
            background-color: white;
        }

            .custom-dropdown .dropdown-arrow {
                display: flex;
                align-items: center;
                justify-content: center;
                color: #dfa974;
                transition: transform 0.3s ease;
            }

            /* Rotate arrow when dropdown is open */
            .custom-dropdown.open .dropdown-arrow {
                transform: rotate(180deg);
            }

            .custom-dropdown .options-container {
                position: absolute;
                top: 100%;
                left: 0;
                width: 100%;
                background-color: white;
                border: 1px solid #ced4da;
                border-top: none;
                border-radius: 0 0 4px 4px;
                z-index: 1000;
                max-height: 200px;
                overflow-y: auto;
                display: none;
                /* Hide scrollbar but keep functionality */
                scrollbar-width: none; /* Firefox */
                -ms-overflow-style: none; /* IE and Edge */
            }

                /* Hide scrollbar for Chrome, Safari and Opera */
                .custom-dropdown .options-container::-webkit-scrollbar {
                    display: none;
                }

                .custom-dropdown .options-container .option {
                    padding: 10px 15px;
                    cursor: pointer;
                    transition: background 0.2s ease;
                }

                    .custom-dropdown .options-container .option:hover {
                        background-color: #f8f9fa;
                    }

                    .custom-dropdown .options-container .option.active {
                        background-color: #dfa97420;
                        color: #dfa974;
                    }
    </style>
}
<div>
    @if (TempData["ErrorMessage"] != null)
    {
        <p>
            TempData["ErrorMessage"]
        </p>
    }
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="booking-form p-4" style="background-color: #fff; border-radius: 10px; box-shadow: 0 0 15px rgba(0,0,0,0.1);">
                <h2 class="text-center mb-4" style="color: #dfa974;">Host Property</h2>

                <form asp-action="HostProperty" method="post">
                    <input type="hidden" asp-for="PropertyID" />
                    <input type="hidden" asp-for="HostID" value="@Model.HostID" />

                    <div class="form-group">
                        <label asp-for="Title">Title<span class="text-danger">*</span></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter title..." />
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">Description<span class="text-danger">*</span></label>
                        <input asp-for="Description" class="form-control" placeholder="Enter description..." />
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address">Address<span class="text-danger">*</span></label>
                        <input asp-for="Address" class="form-control" placeholder="Enter address..." />
                        <span class="text-danger" asp-validation-for="Address"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="City">City<span class="text-danger">*</span></label>
                        <input asp-for="City" class="form-control" placeholder="Enter city..." />
                        <span class="text-danger" asp-validation-for="City"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="State">State<span class="text-danger">*</span></label>
                        <input asp-for="State" class="form-control" placeholder="Enter state..." />
                        <span class="text-danger" asp-validation-for="State"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Country">Country<span class="text-danger">*</span></label>
                        <input asp-for="Country" class="form-control" placeholder="Enter country..." />
                        <span class="text-danger" asp-validation-for="Country"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="PricePerNight">Price Per Night<span class="text-danger">*</span></label>
                        <input asp-for="PricePerNight" class="form-control" placeholder="Enter price..." />
                        <span class="text-danger" asp-validation-for="PricePerNight"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Bedrooms">Bedrooms<span class="text-danger">*</span></label>
                        <input type="text" asp-for="Bedrooms" class="form-control" placeholder="Enter number of bedrooms..." />
                        <span class="text-danger" asp-validation-for="Bedrooms"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="MaxGuests">Maximum Guests<span class="text-danger">*</span></label>
                        <div class="custom-dropdown-container">
                            <input type="hidden" asp-for="MaxGuests" id="hiddenMaxGuests" />
                            <div class="custom-dropdown" id="customMaxGuests">
                                <div class="selected-option" id="selectedMaxGuests">1 Guest</div>
                                <div class="dropdown-arrow">
                                    <svg width="14" height="8" viewBox="0 0 14 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M1 1C1 1 4.5 5 7 5C9.5 5 13 1 13 1" stroke="#dfa974" stroke-width="2" stroke-linecap="round" />
                                    </svg>
                                </div>
                                <div class="options-container">
                                    @for (int i = 1; i <= 10; i++)
                                    {
                                        <div class="option" data-value="@i">@i Guest@(i > 1 ? "s" : "")</div>
                                    }
                                </div>
                            </div>
                        </div>
                        <span class="text-danger" asp-validation-for="MaxGuests"></span>

                    </div>
                    <div class="form-group">
                        <label>Image URLs<span class="text-danger">*</span></label>
                        <div id="imageInputs">
                            @if (Model.Images != null && Model.Images.Any())
                            {
                                for (int i = 0; i < Model.Images.Count; i++)
                                {
                                    <div class="image-url-container">
                                        <input type="text" class="form-control" name="ImageURLs" value="@Model.Images[i].ImageURL" placeholder="Enter image URL..." />
                                        @if (i == 0)
                                        {
                                            <div class="add-btn">+</div>
                                        }
                                        else
                                        {
                                            <div class="remove-btn">-</div>
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="image-url-container">
                                    <input type="text" class="form-control" name="ImageURLs" placeholder="Enter image URL..." />
                                    <div class="add-btn">+</div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="form-buttons-wrapper">
                        <button type="submit" class="btn btn-save" style="width:150px;border-radius: 4px;height: 44px;">
                            SAVE
                        </button>
                        <a href="/Properties/PropertiesOfHosts" class="btn btn-cancel">Cancel</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(document).on('click', '.add-btn', function () {
                var html = `
                                    <div class="image-url-container mt-2">
                                        <input type="text" class="form-control" name="ImageURLs" placeholder="Enter image URL..." />
                                        <div class="remove-btn">-</div>
                                    </div>`;
                $('#imageInputs').append(html);
            });

            $(document).on('click', '.remove-btn', function () {
                $(this).closest('.image-url-container').remove();
            });
            var initialValue = $('#hiddenMaxGuests').val() || 1;
            $('#selectedMaxGuests').text(initialValue + (initialValue > 1 ? ' Guests' : ' Guest'));

            // Toggle dropdown
            $('#customMaxGuests').click(function (e) {
                e.stopPropagation();
                $(this).toggleClass('open');
                $(this).find('.options-container').toggle();
            });

            // Select option
            $('.option').click(function () {
                var value = $(this).data('value');
                var text = $(this).text();

                // Update active class
                $('.option').removeClass('active');
                $(this).addClass('active');

                $('#selectedMaxGuests').text(text);
                $('#hiddenMaxGuests').val(value);
                $('.options-container').hide();
                $('#customMaxGuests').removeClass('open');
            });

            // Close dropdown when clicking elsewhere
            $(document).click(function () {
                $('.options-container').hide();
                $('#customMaxGuests').removeClass('open');
            });

            // Set active class on initial load
            var currentValue = $('#hiddenMaxGuests').val() || 1;
            $('.option[data-value="' + currentValue + '"]').addClass('active');
        });

    </script>
}
