 @model HomeRentalFrontEnd.Models.PropertiesModel;

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active"><a asp-controller="Properties" asp-action="AdminPropertiesList">Properties</a></li>
            </ol>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" asp-action="Save">
                                <input type="hidden" asp-for="PropertyID" />

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="HostID">
                                        Host Name<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="sel1" asp-for="HostID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                            <option value="">Select Host</option>
                                        </select>
                                        <span class="text-danger" asp-validation-for="HostID"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="Title">
                                        Title <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" asp-for="Title" placeholder="Enter title of property..">
                                        <span class="text-danger" asp-validation-for="Title"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="Description">
                                        Description <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" asp-for="Description" placeholder="Enter Description..">
                                        <span class="text-danger" asp-validation-for="Description"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="Address">
                                        Address<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" asp-for="Address" placeholder="Enter Address..">
                                        <span class="text-danger" asp-validation-for="Address"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="City">
                                        City <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" asp-for="City" placeholder="Enter City..">
                                        <span class="text-danger" asp-validation-for="City"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="State">
                                        State <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" asp-for="State" placeholder="Enter State..">
                                        <span class="text-danger" asp-validation-for="State"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="Country">
                                        Country <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" asp-for="Country" placeholder="Enter Country..">
                                        <span class="text-danger" asp-validation-for="Country"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="PricePerNight">
                                        PricePerNight <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" asp-for="PricePerNight" placeholder="Enter Price Per Night..">
                                        <span class="text-danger" asp-validation-for="PricePerNight"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="MaxGuests">
                                        MaxGuests <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" asp-for="MaxGuests" placeholder="Enter Maximum Guests..">
                                        <span class="text-danger" asp-validation-for="MaxGuests"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" asp-for="Bedrooms">
                                        Bedrooms <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" asp-for="Bedrooms" placeholder="Enter Bedrooms..">
                                        <span class="text-danger" asp-validation-for="Bedrooms"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                        <a asp-controller="Users" asp-action="UsersList" class="btn btn-secondary">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>